.comment
  width: 885px
  height: auto
  overflow: hidden
  border: 1px solid #e2e2e2
  padding: 0 24px 0 19px
  .commentList
    float: left
    width: 885px
    height: auto
    overflow: hidden
    padding: 20px 0 20px 0
    border-bottom: 1px solid #e2e2e2
    margin-bottom: -1px
    .nickArea
      float: left
      width: 140px
      padding-right: 15px
    .prphoto
      float: left
      width: 50px
      height: 50px
      margin: 0 8px 0 0
    .prphoto img
      width: 48px
      height: 48px
      border: 1px solid #dddada
    .nick
      display: block
      color: #4f4b4b
    .list
      float: left
      width: 500px
    .list_block
      float: left
      width: 650px
      color: #b8b8b8
      font-weight: bold
    .cont
      width: 620px
      font-size: 14px
      line-height: 26px
      word-break: break-all
      word-wrap: break-word
      color: #333
    .cont a
      color: #6d8da5
      &:hover
        color: #6d8da5
        text-decoration: underline
    .regDate
      width: 620px
      font-size: 11px
      color: #333
      font-family: verdana
    .commBtn
      float: left
      margin-top: 18px
      margin-left: 30px

.commBtn
  float: left
  margin-top: 10px
