.qna-list
	.list
		list-style: none;
		margin: 0;
		padding: 0;
		border-bottom: 1px solid #eaeaea;
		> li
			position: relative;
			padding: .8em .8em .8em 4em;
			border-top: 1px solid #eaeaea;
		.main
			.subject
				display: block;
				font-size: 1.2em;
				line-height: 1.4em;
				a
					display: block;
					color: #333;
		.tags
				font-size: .9em;
				color: #999;
			.tag
				&:before
					content: ', ';
				&:first-child
					&:before
						content: '';
		.auth-info
			margin-top: .8em;
			color: #999;
			.time
				font-size: .9em;
			.author
				// font-weight: bold;
		.reply
			position: absolute;
			left: 0;
			top: .8em;
			width: 4em;
			text-align:center;
			.icon-reply
				position: absolute;
				left: .5em;
				top: 0;
				font-size: 2em;
				color: #eee;
			.point
				position: relative;
				z-index: 1;
				color: #aaa;
				font-size: 2em;
				line-height: 2em;
				letter-spacing: -.2em;
