.qna-list
	.list
		list-style: none;
		margin: 0;
		padding: 0;
		border-bottom: 5px solid #eee;
		border-radius: 0 0 3px 3px;
		> li
			border-width: 5px 5px 0;
			border-style: solid;
			border-color: #eee;
			border-radius: 3px
			&:first-child
				margin-top: 0
			.wrap
				border: 1px solid #ddd
		.main
			padding: 16px 10px 10px
			.subject
				display: block
				font-size: 1.4em
				line-height: 1.4em
				a
					color: #333
		.reply
			float: left
			font-family: tahoma
			.point
				color: #333
				font-weight: bold
		.sub
			padding: 10px
			border-top: 1px solid #f5f5f5
			background-color: #fafafa
			.auth-info
				text-align: right
				.time
					color: #999
					font-size: .9em
				.author
					font-weight: bold
